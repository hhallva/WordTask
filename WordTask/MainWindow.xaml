<Window x:Class="WordTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel Grid.Column="1" Grid.Row="1" Margin="10" Grid.RowSpan="2">
                <TextBlock Text="Текст в письме: " DockPanel.Dock="Top"/>
                <TextBox x:Name="CustomBodyTextBox" Height="100" AcceptsReturn="True"/>
            </DockPanel>

            <Button Content="Создать приказ" Margin="10,0,10,5" Background="#FFCCE8F4" BorderBrush="#FFE6E6E6" x:Name="AddGameButton" Click="AddGameButton_Click"/>
            <Button Content="Создать отчет" Margin="10,0,10,5" Background="#FFCCE8F4" BorderBrush="#FFE6E6E6" x:Name="RenerateReportButton" Click="RenerateReportButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
